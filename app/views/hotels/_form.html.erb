<%= form_for(hotel, html: { :multipart => true, class: 'form-horizontal' }) do |f| %>
  <% if hotel.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(hotel.errors.count, "error") %> prohibited this hotel from being saved:</h2>

      <ul>
        <% hotel.errors.full_messages.each do |msg| %>
          <li style='color:red;'><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :number_rooms, 'Number of rooms' %>
    <%= f.text_field :number_rooms %>
  </div>

  <strong>Photo:</strong>
  <p><%= image_tag hotel.image.display if hotel.image? %></p>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit 'Save', class: 'button' %>
  </div>
<% end %>
